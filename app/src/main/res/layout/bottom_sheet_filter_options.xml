<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/scoreRangeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score range:"
        android:textColor="?attr/colorOnSecondary"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <RadioGroup
        android:id="@+id/scoreRangeRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreRangeLabel">

        <RadioButton
            android:id="@+id/last7dRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnSecondary"
            android:text="Last 7 days" />

        <RadioButton
            android:id="@+id/last14dRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnSecondary"
            android:text="Last 14 days" />

        <RadioButton
            android:id="@+id/last30dRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnSecondary"
            android:text="Last 30 days" />
    </RadioGroup>

    <TextView
        android:id="@+id/sortLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort:"
        android:layout_marginTop="8dp"
        android:textColor="?attr/colorOnSecondary"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreRangeRadioGroup"/>

    <RadioGroup
        android:id="@+id/sortByRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sortLabel">

        <RadioButton
            android:id="@+id/ascRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnSecondary"
            android:text="Ascending" />

        <RadioButton
            android:id="@+id/descRadioBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnSecondary"
            android:text="Descending" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>